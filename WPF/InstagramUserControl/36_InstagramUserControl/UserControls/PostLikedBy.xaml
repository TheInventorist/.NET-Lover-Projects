<UserControl x:Class="_36_InstagramUserControl.UserControls.PostLikedBy"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_36_InstagramUserControl.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" Margin="3,0,0,0">
        <TextBlock>Liked by</TextBlock>
        <TextBlock x:Name="CloseFriend1" 
                   Margin="3,0,0,0"
                   Text="Gabi69,"
                   FontWeight="Bold"/>
        <TextBlock x:Name="CloseFriend2" 
                   Margin="3,0,3,0"
                   Text="Stellaris,"
                   FontWeight="Bold"/>
        
        <TextBlock>and</TextBlock>

        <TextBlock x:Name="otherFriends" 
                   Margin="3,0,3,0"
                   Text="42 others"
                   FontWeight="Bold"/>

    </StackPanel>
</UserControl>
